<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReadingCounter">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@drawable/rounded_corner"
        android:clipToOutline="true"
        android:text="Reading Counter"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"/>

    <Spinner
        android:id="@+id/booksSpinner"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:entries="@array/books"/>

    <TextView
        android:id="@+id/BooksTextView"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:text="Enter the number of the pages you will read in a day:"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="227dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/NumOfPages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="218dp"
        android:layout_marginLeft="85dp"/>

    <Button
        android:id="@+id/CountBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Count Pages"
        android:padding="16dp"
        android:onClick="onBtnBreClick"
        />
    <TextView
        android:id="@+id/BooksCounted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:text="No book selected" />

    <Button
        android:id="@+id/HomeBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Back to home Page"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"
        android:onClick="onClickGoBackHome"/>

</LinearLayout>